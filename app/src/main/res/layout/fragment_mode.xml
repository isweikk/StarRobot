        <Button
            android:id="@+id/buttonIRMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="75.0dip" android:layout_marginTop="10.0dip"
            android:textColor="@android:color/white" android:text="遥控模式"
            android:textAlignment="center" />
        <Button
            android:id="@+id/buttonFindLineMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="55.0dip" android:layout_marginTop="10.0dip"
            android:textColor="@android:color/white" android:text="巡线模式"
            android:textAlignment="center" />
        <Button
            android:id="@+id/buttonAvoidMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="55.0dip" android:layout_marginTop="10.0dip"
            android:textColor="@android:color/white" android:text="避障模式"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="0.0dip"
        android:layout_marginTop="0.0dip" android:layout_weight="1.0">
        <Button
            android:id="@+id/buttonColorMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="75.0dip" android:layout_marginTop="20.0dip"
            android:textColor="@android:color/white" android:text="七彩探照"
            android:textAlignment="center" />
        <Button
            android:id="@+id/buttonLightSeekMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="55.0dip" android:layout_marginTop="20.0dip"
            android:textColor="@android:color/white" android:text="寻光模式"
            android:textAlignment="center" />
        <Button
            android:id="@+id/buttonTrackingMode" android:background="@drawable/button_bg"
            android:layout_width="120.0dip" android:layout_height="75.0dip"
            android:layout_marginLeft="55.0dip" android:layout_marginTop="20.0dip"
            android:textColor="@android:color/white" android:text="跟随模式"
            android:textAlignment="center" />
